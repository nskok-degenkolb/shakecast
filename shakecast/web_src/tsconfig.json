{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "@shakecast-admin/*": [
        "./app/shakecast-admin/*"
      ],
      "@shakecast/*": [
        "./app/shakecast/*"
      ],
      "@core/*": [
        "./app/core/*"
      ],
      "@shared/*": [
        "./app/shared/*"
      ]
    },
    "useDefineForClassFields": false
  }
}